@model FilmsCatalog.Models.ViewModels.FilmViewModel;

@{
    ViewData["Title"] = "Create";
}

<h4>Add new film</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-controller="Films" asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input type="text" asp-for="Name" class="form-control" placeholder="Enter the name of the film" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" placeholder="Enter a description of the film" required></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearsOfRealease" class="control-label">Years of realease</label>
                <input type="date" asp-for="YearsOfRealease" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                <span asp-validation-for="YearsOfRealease" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Director" class="control-label"></label>
                <input type="text" asp-for="Director" placeholder="Enter the film director" class="form-control" required />
                <span asp-validation-for="Director" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Poster" class="control-label"></label>
                <input type="file" asp-for="Poster" accept="image/jpeg,image/png" onchange="handleFileSelect(event)" class=" form-control" required title="Upload an image for the poster" />
                <span asp-validation-for="Poster" class="text-danger"></span>
            </div>
            <div id="preview" class="form-group">
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-dark" />
                <a class="btn btn-outline-dark" asp-controller="Films" asp-action="ShowCatalog">Back to Catalog</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
